<div class="flex mt-16 justify-center h-screen">
  <div class="w-full max-w-xs">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "bg-white shadow-md  px-8 pt-6 pb-8 mb-4"}) do |f| %>
      <div class="mb-4">
        <%= f.label :email, class: "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>
      <div class="mb-6">
        <%= f.label :password, class: "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
        <p class="alert text-red-500 text-xs italic"><%= alert %></p>
      </div>
      <div class="flex items-center justify-between mb-2">
        <%= f.submit "Log in", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      </div>
      <div>
        <p class="text-gray-700 text-xs">Don't have an account? Click <%= link_to('here', new_user_registration_path, class: "underline text-blue-500") %> to sign up.</p>
      </div>
    <% end %>
    <p class="text-center text-gray-500 text-xs">
      &copy;2020 Mitch's Bitches Corp. All rights reserved.
    </p>
  </div>
</div>
