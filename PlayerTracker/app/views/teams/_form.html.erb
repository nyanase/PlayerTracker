<%= form_with(model: team, local: true, html: {class: "px-8 pt-6 pb-8 mb-4m"}) do |form| %>

  <div class="flex items-center py-2">
    <%= form.text_field :name, class: "appearance-none bg-transparent w-full text-gray-700 mr-3 py-1 px-2 leading-tight focus:outline-none border-b border-b-2 border-grey-500", placeholder: "WashU" %>
    <%= form.submit "Create", class: "btn-primary flex-shrink-0 bg-blue-500 text-sm border-4 text-white py-1 px-2" %>
    <%= link_to "Cancel", root_path, class: "flex-shrink-0 border-transparent border-4 text-gray-600 hover:text-blue-800 text-sm py-1 px-2 rounded" %>
  </div>
  <% if team.errors.any? %>
    <div id="error-explanation">
        <% team.errors.full_messages.each do |message| %>
        <p class="text-red-500 text-xs"><%= message %></li>    
        <% end %>
    </div>
  <% end %>
<% end %>