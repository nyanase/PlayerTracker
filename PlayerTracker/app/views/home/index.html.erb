<div class="flex mt-8 justify-center h-screen">
  <div class="w-full max-w-lg">
    <% if current_user %>
      <div class="mt-5 max-w-md mx-auto sm:flex sm:justify-center md:mt-8">
        <div class="rounded-md">
          <%= link_to 'Create Team', new_team_path, method: 'GET', class:"btn-primary px-8 py-3 text-base leading-6 font-medium md:py-4 md:text-lg md:px-10" %>
        </div>
      </div>
      
      <% @teams.each do |team| %>
        <%= link_to team_path(team), class: "btn-team mt-4 w-full bg-white shadow-md px-8 pt-6 pb-8 mb-4m" do %>
          <span class="flex items-center font-md text-3xl text-black hover:text-primary-500 focus:outline-none focus:text-gray-900 transition duration-150 ease-in-out"><%= team.name %></span> 
        <% end %>
      <% end %>

        
    <% end %>
  </div>
</div>

