<div class="flex mt-8 justify-center h-screen bg-indigo-100">
  <div class="w-full max-w-6xl">
    <div class="flex justify-left">
      <%= link_to 'Back to Team', team_path(@team), class:"bg-gray-500 hover:bg-gray-700 border-gray-500 hover:border-gray-700 text-xs border-4 text-white py-1 px-2 rounded object-right" %>
    </div>
    <div class="flex justify-center">
      <h1 class="text-4xl text-blue-500 font-bold"><%= @player.user.first_name + " " + @player.user.last_name %></h1>
    </div>

    <div class="flex w-full justify-center mt-8">
      <div class="w-full max-w-lg mr-8">
        <div class="flex w-full mb-4">
          <h1 class="text-lg text-blue-500 py-1">Stats</h1>
        </div>
        <div class="bg-white shadow-md px-8 pt-6 pb-8 mb-4m">
          <table class="w-full">
            <tbody>
                <% @stats.each do |stat| %>
                <tr>
                  <td class="px-2">
                    <%= stat[:name] %>: 
                  </td>
                  <td class="px-2">
                    <%= stat[:data].length() %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
  </div>
</div>
